<% layout('./layouts/boilerplate') %>
  <div class="row">
    <h1 class="text-center">Add campground</h1>
    <div class="col-6 offset-3">

        <form class="needs-validation" action="/campgrounds" method="post" novalidate>
          <div class="mb-3">
            <label class= "form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="campground[title]" placeholder = "Lake haven" value="" required>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>

          <div class="mb-3">
            <label class= "form-label" for="location"> Location </label>
            <input class="form-control" type="text" id="location" name="campground[location]" placeholder = "Venice" value="" required>
          </div>
          <div class="mb-3">
            <label class= "form-label" for="image"> Image URL </label>
            <input class="form-control" type="text" id="image" name="campground[image]" placeholder = "Paste url here" value="" required>
          </div>

          <div class="mb-3">
            <label class= "form-label" for="price">Price per day</label>

          <div class="input-group">

            <div class="input-group-prepend">
              <span class="input-group-text" id="price-label">â‚¹</span>
            </div>

            <input type="text" id= "price" class="form-control" placeholder="0.00" name="campground[price]" aria-label="price" aria-describedby="price-label" required>
          </div>
          </div>

          <div class="mb-3">
            <label class= "form-label" for="description">Description</label>
            <textarea class="form-control" id="description" name="campground[description]" placeholder = "Whats' special here?" required></textarea>
          </div>

          <div class="mb-3">
            <button class= "btn btn-success">Add Campground</button>
          </div>

        </form>

        <a href="/campgrounds">back to full list</a>

    </div>
  </div>
