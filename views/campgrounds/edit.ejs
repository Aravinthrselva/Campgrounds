
<% layout('./layouts/boilerplate') %>

<h1>Edit Campground</h1>

<! -- Forms only send a GET or Post request from a browserso we need a method override to fake express into thinking it is a put request. query string _method should be same as decalred by the methodOverride in app.js-->
  <form class="" action="/campgrounds/<%=campground._id%>?_method=PUT" method="post">
    <div class="">
      <label for="title">Title</label>
      <input type="text" id="title" name="campground[title]" placeholder="" value="<%=campground.title%>">
    </div>
    <br>
    <div class="">
      <label for="location"> Location </label>
      <input type="text" id="location" name="campground[location]" placeholder="" value="<%=campground.location%>">
    </div>
    <br>
    <button>Update Campground</button>
  </form>
  <br>
  <a href="/campgrounds/<%=campground._id%>">back to campground</a>
