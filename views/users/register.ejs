
<% layout('./layouts/boilerplate') %>


<div class="row">
  <div class="col-6 offset-3">

      <form class="needs-validation" action="/register" method="post" novalidate>
        <div class="mb-3">
          <label class= "form-label" for="username">Username</label>
          <input class="form-control" type="text" id="username" name="username" placeholder = "" value="" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label class= "form-label" for="email">Email-ID</label>
          <input class="form-control" type="email" id="email" name="email" placeholder = "" value="" required>
        </div>
        <div class="mb-3">
          <label class= "form-label" for="password">Password</label>
          <input class="form-control" type="password" id="password" name="password" placeholder = "" value="" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <button class= "btn btn-primary" name=""> Register </button>
  </div>

</div>
